msgstr "Эра древнего зла"

msgid "Iron Legion"
msgstr "Железный Легион"

msgid "Warrior Mk I"
msgstr "Воин Mk I"

msgid "Warrior Mk II"
msgstr "Воин Mk II"

msgid "Warrior Mk III"
msgstr "Воин Mk III"

msgid "sword"
